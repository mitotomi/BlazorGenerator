@page "/person/delete/{id}"
@inject HttpClient Http
@inject Microsoft.AspNetCore.Blazor.Services.IUriHelper uriHelper
<h1>Delete Person</h1>

Are you sure you want to delete this entity
<td><button onclick="@Yes">Yes</button> |<button onclick="@No">No</button></td>
@functions{
	[Parameter]
	private string Id {get; set;}
	public async Task Yes(){
		await Http.DeleteAsync("/api/person/delete/"+Id);
		uriHelper.NavigateTo("/persons");
	}
	public void No(){
		uriHelper.NavigateTo("/persons");
	}
}
